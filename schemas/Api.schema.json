{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/Api.schema.json",
  "title": "API",
  "description": "An API from the catalog",
  "type": "object",
  "allOf": [
    {
      "$ref": "./ApiSummary.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "oasUrl": {
          "description": "The URL of the OAS document",
          "type": "string",
          "format": "uri",
          "examples": [
            "https://api.developer.overheid.nl/api-register/v1/openapi.json"
          ]
        },
        "auth": {
          "type": "array",
          "description": "The authentication methods supported by the API",
          "items": {
            "type": "string",
            "examples": ["OAuth2", "API Key"]
          }
        },
        "docsUrl": {
          "type": "string",
          "description": "The URL to the documentation of the API",
          "format": "uri",
          "examples": ["https://developer.overheid.nl/kennisbank/"]
        },
        "servers": {
          "type": "array",
          "description": "The servers where the API is hosted",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri",
                "description": "The URL of the server",
                "examples": ["https://api.developer.overheid.nl"]
              },
              "description": {
                "type": "string",
                "description": "A description of the server",
                "examples": ["Production server"]
              }
            },
            "required": ["url", "description"]
          }
        }
      },
      "required": ["auth", "docsUrl", "servers"]
    }
  ]
}
