{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/OasInput.schema.json",
  "title": "OAS Input",
  "description": "OAS Input (either URL or raw content)",
  "type": "object",
  "properties": {
    "oasBody": {
      "type": "string",
      "description": "The raw content of the OAS document"
    },
    "oasUrl": {
      "$ref": "./OasUrl.schema.json"
    }
  },
  "oneOf": [
    {
      "title": "OAS Body Only",
      "required": ["oasBody"],
      "not": { "required": ["oasUrl"] }
    },
    {
      "title": "OAS URL Only",
      "required": ["oasUrl"],
      "not": { "required": ["oasBody"] }
    }
  ]
}
