{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/beer.schema.json",
  "title": "Beer",
  "description": "A beer from the catalog",
  "type": "object",
  "properties": {
    "id": {
      "description": "The unique identifier for a beer",
      "type": "integer"
    },
    "name": {
      "description": "The name of the beer",
      "type": "string"
    },
    "brewery": {
      "description": "The brewery that produces the beer",
      "$ref": "./brewery.schema.json"
    },
    "style": {
      "description": "The style of the beer",
      "$ref": "./style.schema.json"
    },
    "abv": {
      "description": "Alcohol by volume percentage",
      "type": "number",
      "minimum": 0,
      "maximum": 100
    }
  }
}