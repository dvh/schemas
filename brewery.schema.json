{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/brewery.schema.json",
  "title": "Brewery",
  "description": "A brewery from the catalog",
  "type": "object",
  "properties": {
    "id": {
      "description": "The unique identifier for a brewery",
